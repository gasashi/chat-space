.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        = @group.name
      .main-header__left-box__member
        Memberï¼š
        - @group.users.each do |m|
          = m.name
    = link_to edit_group_path(@group) , class: "main-header__edit-btn" do
      Edit
  .messages
    = render @messages
  .form
    .form__input-box
      = form_for [@group, @message] do |f|
        .image
          = f.text_field :content,  class:'form__input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'form__input-box__image' do
            = icon('fas', 'image')
            = f.file_field :image, class: 'form__input-box__image--icon'
        = f.submit 'Send', class: 'submit-btn'